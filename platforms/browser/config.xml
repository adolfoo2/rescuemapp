<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.rescuemapp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <feature name="Camera">
        <param name="browser-package" value="Camera" />
    </feature>
    <feature name="Device">
        <param name="browser-package" value="Device" />
    </feature>
    <name>Rescue mApp</name>
    <description>
        Aplicaci√≥n para registro de incidencias
    </description>
    <author email="adolfo.herrera.f@mail.pucv.cl" href="">
        Rescue mApp
    </author>
    <content src="index.html" />
    <edit-config file="*-Info.plist" mode="merge" target="NSLocationWhenInUseUsageDescription">
        <string>Need location access to find things nearby </string>
    </edit-config>
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="12" />
    <preference name="android-targetSdkVersion" value="28" />
</widget>
